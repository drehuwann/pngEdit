{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "windows": {
                "command": "pushd ${workspaceFolder}/build; cmake ..; cmake --build .; cd src; cp Debug/pngEditor.exe ../../output; cd ../../.vscode; cp launchWin.json launch.json; popd",
                "problemMatcher": "$msCompile"
            },
            "linux": {
                "command": "pushd ${workspaceFolder}/build; cmake ..; cmake --build .; cd src; cp pngEditor ../../output;  cd ../../.vscode; ln -sf ./launchLin.json launch.json; popd",
                "problemMatcher": "$gcc"
            },
            "osx": {
                "command": "echo osx not implemented yet"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "pushd ${workspaceFolder}/build; rm -r *; git restore ./.gitignore; rm ../output/pngEditor.exe; popd",
                "problemMatcher": "$msCompile"
            },
            "linux": {
                "command": "pushd ${workspaceFolder}/build; rm -r *; rm -r .*; git restore ./.gitignore; rm ../output/pngEditor; popd",
                "problemMatcher": "$gcc"
            },
            "osx": {
                "command": "echo osx not implemented yet"
            }
        },
        {
            "label": "objdump",
            "type": "shell",
            "linux": {
                "command": "pushd ${workspaceFolder}/build/src/CMakeFiles/pngEditor.dir; objdump -Dj .text --visualize-jumps=color --disassembler-color=on -M intel ${fileBasenameNoExtension}.cpp.o | less -R; popd",
                "problemMatcher": "$gcc"
            },
            "windows": {
                "command": "pushd ${workspaceFolder}/build/src/pngEditor.dir/Debug; dumpbin /DISASM /SECTION:'.text$mn' ${fileBasenameNoExtension}.obj | more; popd",
                "problemMatcher": "$msCompile"
            }
        }
    ]
}
